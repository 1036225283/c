{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "user/show.c",
                "-c",
                "user",
                "--debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build with Clang",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "hello.c",
                "-o",
                "hello",
                "--debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "clang",
            "args": [
                "main/*.c",
                "-o",
                "hello.sh",
                "--debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "lib",
            "type": "shell",
            "command": "clang",
            "args": [
                "-L",
                "/usr/local/lib/xws",
                "-l",
                "user",
                "-l",
                "show",
                "main/*.c",
                "-o",
                "hello.sh",
                "--debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}